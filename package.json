{
  "name": "@adobe/aem-boilerplate-commerce",
  "private": true,
  "version": "3.0.0",
  "description": "Starter project for Adobe Commerce on Edge Delivery Services",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "start": "aem up",
    "install:dropins": "node build.mjs && node postinstall.js",
    "postinstall": "npm run install:dropins",
    "postupdate": "npm run install:dropins"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlxsites/aem-boilerplate-commerce.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/hlxsites/aem-boilerplate-commerce/issues"
  },
  "homepage": "https://github.com/hlxsites/aem-boilerplate-commerce#readme",
  "libraries": [
    { 
      "name": "@dropins/tools",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/tools"
    },
    {
      "name": "@dropins/storefront-account",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-account"
    },
    {
      "name": "@dropins/storefront-auth",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-auth"
    },
    { 
      "name": "@dropins/storefront-cart",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-cart"
    },
    { 
      "name": "@dropins/storefront-checkout",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-checkout"
    },
    { 
      "name": "@dropins/storefront-order",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-order"
    },
    { 
      "name": "@dropins/storefront-payment-services",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-payment-services"
    },
    { 
      "name": "@dropins/storefront-pdp",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-pdp"
    },
    { 
      "name": "@dropins/storefront-wishlist",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-wishlist"
    },
    { 
      "name": "@dropins/storefront-personalization",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-personalization"
    },
    { 
      "name": "@dropins/storefront-product-discovery",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-product-discovery"
    },
    { 
      "name": "@dropins/storefront-recommendations",
      "include": ["**/*"],
      "destination": "scripts/__dropins__/storefront-recommendations"
    },
    { 
      "name": "@adobe/adobe-client-data-layer",
      "include": ["dist/adobe-client-data-layer.min.js"],
      "destination": "scripts/__/adobe-client-data-layer"
    },
    { 
      "name": "@adobe/magento-storefront-event-collector",
      "include": ["dist/index.js"],
      "destination": "scripts/__/magento-storefront-event-collector"
    },
    { 
      "name": "@adobe/magento-storefront-events-sdk",
      "include": ["dist/index.js"],
      "destination": "scripts/__/magento-storefront-events-sdk"
    },
    { 
      "name": "ajv",
      "include": ["dist/2020.js"],
      "destination": "scripts/__/ajv"
    }
  ],
  "devDependencies": {
    "@adobe/aem-cli": "^16.5.8",
    "@babel/eslint-parser": "7.25.9",
    "@dropins/build-tools": "1.0.1",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.31.0",
    "glob": "^11.0.2",
    "stylelint": "16.20.0",
    "stylelint-config-standard": "38.0.0"
  },
  "dependencies": {
    "@adobe/adobe-client-data-layer": "^3.0.0",
    "@adobe/magento-storefront-event-collector": "^1.8.0",
    "@adobe/magento-storefront-events-sdk": "^1.8.0",
    "@dropins/storefront-account": "~1.0.9",
    "@dropins/storefront-auth": "~2.1.0",
    "@dropins/storefront-cart": "1.5.1-beta1",
    "@dropins/storefront-checkout": "~2.0.1",
    "@dropins/storefront-order": "~1.3.0",
    "@dropins/storefront-payment-services": "~1.0.1",
    "@dropins/storefront-pdp": "~1.3.1",
    "@dropins/storefront-recommendations": "~1.1.0",
    "@dropins/storefront-wishlist": "~2.0.0",
    "@dropins/tools": "1.5.0-beta2",
    "@dropins/storefront-personalization": "~1.0.1",
    "@dropins/storefront-product-discovery": "~2.0.0",
    "ajv": "^8.12.0"
  }
}
