# RAG Service Configuration
# Set to 'worker' for the simple worker service, 'cloudflare' for Cloudflare AutoRAG
RAG_MODE=worker

# Worker Service Configuration (only needed if RAG_MODE=worker)
# The URL of the worker-based RAG service, that takes a "query" parameter and returns a JSON response
WORKER_RAG_URL=your_worker_url_here

# Cloudflare AutoRAG Configuration (only needed if RAG_MODE=cloudflare)
# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_api_token_here

# Find this in your Cloudflare dashboard under "Account ID"
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# The autoRag name
CLOUDFLARE_RAG_NAME=your_rag_name_here
